#include <iostream>
using namespace std;
int linearSearch(int arr[], int size){
    int value;
    cout << "Write the value " << endl;
    cin >> value;
    for(int i = 0; i <= size - 1; i++){
        if(arr[i] == value){
            return i;
        }
    }return 0;
}



int main() {
    int array[] = {1,2,-3,4,-5}, size = 5;
    int result = linearSearch(array,size);
    
    if(result == 0){
        cout << "Element doesn't exist";
    }else {
        cout << "Element exist at index " << result;
    }
    
    

    return 0;
}

output/-
/tmp/AtO7qUSceQ.o
Write the value 
2
Element exist at index 1
