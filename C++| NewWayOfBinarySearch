#include <iostream>
using namespace std;

int valueIndex(int arr[], int size) {
    int num, mid;
    cout << "Enter the value of num" << endl;
    cin >> num;

    for (int low = 0, high = size - 1; low <= high; ) {
        mid = (low + high) / 2;
        if (num > arr[mid]) {
            low = mid + 1;
        } else if (num < arr[mid]) {
            high = mid - 1;
        } else {
            return mid;
        }
    }
    cout << "Element doesn't exist";
    return -1;
}

int main() {
    int array[] = {1, 2, 3, 4, 5, 6}, size = 6;
    int result = valueIndex(array, size);
    if (result != -1) {
        cout << "Number found at " << result;
    }
    return 0;
}


