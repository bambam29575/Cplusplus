#include <iostream>
using namespace std;
int fact(int n){
    int factorial = 1;
    for (int i = 1; i <= n; i++){
        factorial *= i;
    }
    return factorial;
}

int main() {
    int n, r, nCr;
    cin >> n >> r;
    nCr = fact(n)/(fact(r)*fact(n-r));
    cout << nCr;
    
    return 0;
}

output/-
8
2
28
